@model Incident
@{
    ViewBag.Title = "Edit Incident";
}
@section scripts {
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}

<h4>@ViewBag.Title</h4>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label class="w-25">Technician:</label>
        <label>@Model.Technician.Name</label>
    </div>
    <div class="form-group">
        <label class="w-25">Customer:</label>
        <label>@Model.Customer.FullName</label>
    </div>
    <div class="form-group">
        <label class="w-25">Product:</label>
        <label>@Model.Product.Name</label>
    </div>
    <div class="form-group">
        <label class="w-25">Title:</label>
        <label>@Model.Title</label>
    </div>
    <div class="form-group">
        <label class="w-25">Date Opened:</label>
        <label>@Model.DateOpened.ToShortDateString()</label>
    </div>
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea asp-for="Description" class="form-control" rows="2" style="resize: none;"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="DateClosed">Date Closed</label>
        <input asp-for="DateClosed" class="form-control">
    </div>
    <input type="hidden" asp-for="IncidentID" />
    <input type="hidden" asp-for="CustomerID" />
    <input type="hidden" asp-for="ProductID" />
    <input type="hidden" asp-for="TechnicianID" />
    <input type="hidden" asp-for="Title" />
    <input type="hidden" asp-for="DateOpened" />
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>