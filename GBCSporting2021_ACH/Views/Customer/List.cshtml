@model List<Customer>
@{
    ViewBag.Title = "Customer Manager";
}

<h4>@ViewBag.Title</h4>
<div class="row">
    <div class="col-sm-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>City</th>
                    <th></th>
                    <th></th>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.FirstName @customer.LastName</td>
                        <td>@customer.Email</td>
                        <td>@customer.City</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@customer.CustomerID" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <a asp-action="Delete" asp-route-id="@customer.CustomerID" class="btn btn-primary">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Add" class="btn btn-primary">Add Customer</a>
    </div>
</div>