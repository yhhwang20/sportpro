@model List<Product>
@{
    ViewBag.Title = "Product Manager";
}

<h4>@ViewBag.Title</h4>
<div class="row">
    <div class="col-sm-10">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>Code</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Release Date</th>
                    <th></th>
                    <th></th>
            </thead>
            <tbody>
                @foreach (var product in Model)
                {
                    <tr>
                        <td>@product.Code</td>
                        <td>@product.Name</td>
                        <td>$@product.Price.ToString("F")</td>
                        <td>@product.DateReleased.ToShortDateString()</td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@product.ProductID" class="btn btn-primary">Edit</a>
                        </td>
                        <td>
                            <a asp-action="Delete"  asp-route-id="@product.ProductID" class="btn btn-primary">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <a asp-action="Add" class="btn btn-primary">Add Product</a>
    </div>
</div>