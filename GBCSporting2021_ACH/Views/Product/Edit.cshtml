@model Product
@{
    string title = ViewBag.Action + " Product";
    ViewBag.Title = title;
}

<h4>@title</h4>

<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group">
        <label asp-for="Code">Code</label>
        <input asp-for="Code" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Price">Price</label>
        <input asp-for="Price" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="DateReleased">Release Date</label>
        <input asp-for="DateReleased" class="form-control">
    </div>

    <input type="hidden" asp-for="ProductID" />

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="List" class="btn btn-primary">Cancel</a>
</form>